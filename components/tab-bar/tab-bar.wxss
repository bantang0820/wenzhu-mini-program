/* components/tab-bar/tab-bar.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: #FFFFFF;
  display: flex;
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  z-index: 999;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
  padding: 12rpx 0;
  transition: all 0.2s ease;
}

.tab-bar-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.tab-icon {
  font-size: 48rpx;
  line-height: 1;
  margin-bottom: 2rpx;
  transition: all 0.2s ease;
}

.tab-text {
  font-size: 22rpx;
  color: #8B7E74;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.2s ease;
}

.tab-bar-item.selected .tab-icon {
  transform: scale(1.1);
}

.tab-bar-item.selected .tab-text {
  color: #D4AF37;
  font-weight: 600;
}
