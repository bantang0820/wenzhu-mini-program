/* pages/stats/stats.wxss - 觉察页面 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  padding: 40rpx 24rpx 140rpx;
}

/* ========== 顶部：核心数据 ========== */
.hero-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
}

.hero-label {
  font-family: "Songti SC", serif;
  font-size: 28rpx;
  color: rgba(43, 48, 58, 0.5);
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.hero-number {
  font-family: "Songti SC", serif;
  font-size: 120rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.2);
}

.hero-unit {
  font-family: "Songti SC", serif;
  font-size: 32rpx;
  color: rgba(43, 48, 58, 0.4);
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
}

.hero-stats {
  margin-top: 20rpx;
}

.stats-text {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.8);
  letter-spacing: 1rpx;
  text-align: center;
}

/* ========== 心灵状态（原等级进度） ========== */
.state-section {
  padding: 32rpx 36rpx;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(15px);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.state-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.state-current {
  font-size: 28rpx;
  color: #2B303A;
  font-weight: 500;
  letter-spacing: 4rpx;
  font-family: "Songti SC", serif;
  position: relative;
}

.state-progress-box {
  position: relative;
}

.state-progress-bar {
  width: 100%;
  height: 6rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 3rpx;
  overflow: visible;
  margin-bottom: 20rpx;
  position: relative;
}

.state-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #E6D5B8 0%, #D4AF37 100%);
  border-radius: 3rpx;
  transition: width 1.5s cubic-bezier(0.19, 1, 0.22, 1);
  box-shadow: 0 0 10rpx rgba(212, 175, 55, 0.2);
}

.progress-glow {
  position: absolute;
  top: 50%;
  width: 12rpx;
  height: 12rpx;
  background: #D4AF37;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.6);
  animation: pulseGlow 2s infinite;
}

@keyframes pulseGlow {
  0% { transform: translate(-50%, -50%) scale(1); opacity: 0.8; }
  50% { transform: translate(-50%, -50%) scale(1.5); opacity: 0.4; }
  100% { transform: translate(-50%, -50%) scale(1); opacity: 0.8; }
}

.state-hint {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.6);
  text-align: center;
  letter-spacing: 1rpx;
}

.state-hint .highlight {
  color: #D4AF37;
  margin: 0 4rpx;
  font-weight: 500;
}

/* ========== 通用区块样式 ========== */
.calendar-section,
.radar-section,
.medal-section {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-family: "Songti SC", serif;
  font-size: 26rpx;
  font-weight: 600;
  color: #2B303A;
  letter-spacing: 2rpx;
}

/* ========== 日历 ========== */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.calendar-day.today {
  border: 2rpx solid rgba(212, 175, 55, 0.5);
}

.calendar-day.checked {
  background: rgba(212, 175, 55, 0.15);
}

.day-number {
  font-size: 22rpx;
  color: rgba(43, 48, 58, 0.6);
  font-weight: 500;
  z-index: 5; /* 确保数字在光球上方 */
  position: relative;
}

.calendar-day.checked .day-number {
  color: #2B303A;
  font-weight: 600;
}

/* 金色修习微光球 - 雅致加浓版 (色值更浓郁) */
.golden-energy-ball {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 72rpx;
  height: 72rpx;
  /* 提升了中心浓点和整体色彩饱和度 */
  background: radial-gradient(circle, 
    rgba(212, 175, 55, 0.8) 0%, 
    rgba(212, 175, 55, 0.45) 45%, 
    rgba(212, 175, 55, 0.15) 75%, 
    transparent 100%
  );
  border-radius: 50%;
  z-index: 1;
  animation: shimmer 4s infinite ease-in-out;
  pointer-events: none;
  /* 增强了外围的金色氛围感 */
  box-shadow: 0 0 30rpx rgba(212, 175, 55, 0.35);
}

/* 图例中的样式 - 同步加浓 */
.golden-energy-ball.legend-marker {
  position: static;
  width: 24rpx;
  height: 24rpx;
  background: #D4AF37;
  transform: none;
  animation: none;
  opacity: 0.9;
  box-shadow: 0 0 12rpx rgba(212, 175, 55, 0.4);
}

@keyframes shimmer {
  0%, 100% { 
    transform: translate(-50%, -50%) scale(0.95); 
    opacity: 0.7; 
    box-shadow: 0 0 25rpx rgba(212, 175, 55, 0.3);
  }
  50% { 
    transform: translate(-50%, -50%) scale(1.1); 
    opacity: 1; 
    box-shadow: 0 0 50rpx rgba(212, 175, 55, 0.5);
  }
}

.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.7);
}

/* ========== 勋章墙 ========== */
.medal-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 12rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.medal-item.unlocked {
  border: 1rpx solid rgba(212, 175, 55, 0.4);
  background: rgba(255, 255, 255, 0.5);
}

.medal-item.locked {
  opacity: 0.4;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.medal-icon {
  font-size: 48rpx;
  line-height: 1;
}

.medal-item.unlocked .medal-icon {
  filter: drop-shadow(0 0 8rpx rgba(212, 175, 55, 0.6));
  animation: medalGlow 2s ease-in-out infinite;
}

@keyframes medalGlow {
  0%, 100% {
    filter: drop-shadow(0 0 8rpx rgba(212, 175, 55, 0.6));
  }
  50% {
    filter: drop-shadow(0 0 16rpx rgba(212, 175, 55, 0.9));
  }
}

.medal-icon.locked-icon {
  font-size: 36rpx;
  opacity: 0.3;
}

.medal-name {
  font-size: 20rpx;
  color: rgba(43, 48, 58, 0.8);
  font-family: "Songti SC", serif;
  text-align: center;
}

.medal-desc {
  font-size: 16rpx;
  color: rgba(140, 134, 128, 0.6);
  text-align: center;
}

.medal-grid.locked {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.empty-medals {
  padding: 40rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.6);
  font-family: "Songti SC", serif;
}
