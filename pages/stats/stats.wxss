  font-weight: 600;
  color: #2B303A;
  letter-spacing: 2rpx;
}

/* ========== 日历 ========== */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.calendar-day.today {
  border: 2rpx solid rgba(212, 175, 55, 0.5);
}

.calendar-day.checked {
  background: rgba(212, 175, 55, 0.15);
}

.day-number {
  font-size: 22rpx;
  color: rgba(43, 48, 58, 0.6);
  font-weight: 500;
}

.calendar-day.checked .day-number {
  color: #2B303A;
  font-weight: 600;
}

.check-dot {
  position: absolute;
  bottom: 6rpx;
  width: 10rpx;
  height: 10rpx;
  background: #D4AF37;
  border-radius: 50%;
  box-shadow: 0 0 12rpx rgba(212, 175, 55, 0.6), 0 0 6rpx rgba(212, 175, 55, 0.8);
}

.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.legend-dot.checked {
  background: #D4AF37;
  border: none;
  box-shadow: 0 0 6rpx rgba(212, 175, 55, 0.5);
}

.legend-text {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.7);
}

/* ========== 勋章墙 ========== */
.medal-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 12rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.medal-item.unlocked {
  border: 1rpx solid rgba(212, 175, 55, 0.4);
  background: rgba(255, 255, 255, 0.5);
}

.medal-item.locked {
  opacity: 0.4;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.medal-icon {
  font-size: 48rpx;
  line-height: 1;
}

.medal-item.unlocked .medal-icon {
  filter: drop-shadow(0 0 8rpx rgba(212, 175, 55, 0.6));
  animation: medalGlow 2s ease-in-out infinite;
}

@keyframes medalGlow {
  0%, 100% {
    filter: drop-shadow(0 0 8rpx rgba(212, 175, 55, 0.6));
  }
  50% {
    filter: drop-shadow(0 0 16rpx rgba(212, 175, 55, 0.9));
  }
}

.medal-icon.locked-icon {
  font-size: 36rpx;
  opacity: 0.3;
}

.medal-name {
  font-size: 20rpx;
  color: rgba(43, 48, 58, 0.8);
  font-family: "Songti SC", serif;
  text-align: center;
}

.medal-desc {
  font-size: 16rpx;
  color: rgba(140, 134, 128, 0.6);
  text-align: center;
}

.medal-grid.locked {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.empty-medals {
  padding: 40rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.6);
  font-family: "Songti SC", serif;
}
