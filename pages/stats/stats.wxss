/* pages/stats/stats.wxss - 觉察页面 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  padding: 40rpx 24rpx 140rpx;
}

/* ========== 顶部：核心数据 ========== */
.hero-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
}

.hero-label {
  font-family: "Songti SC", serif;
  font-size: 28rpx;
  color: rgba(43, 48, 58, 0.5);
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.hero-number {
  font-family: "Songti SC", serif;
  font-size: 120rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.2);
}

.hero-unit {
  font-family: "Songti SC", serif;
  font-size: 32rpx;
  color: rgba(43, 48, 58, 0.4);
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
}

.hero-stats {
  margin-top: 20rpx;
}

.stats-text {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.8);
  letter-spacing: 1rpx;
  text-align: center;
}

/* ========== 等级进度 ========== */
.level-section {
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}

.level-header {
  margin-bottom: 20rpx;
}

.level-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2B303A;
  font-family: "Songti SC", serif;
}

.level-progress {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(212, 175, 55, 0.6) 0%, rgba(212, 175, 55, 0.9) 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.level-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.level-current {
  font-size: 22rpx;
  color: #2B303A;
  font-weight: 600;
}

.level-next {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.6);
}

