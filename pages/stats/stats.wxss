/* pages/stats/stats.wxss - 觉察（小红书风格） */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F5F0 0%, #EBEAE6 100%);
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
  position: relative;
}

/* Loading 遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(245, 243, 240, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(212, 175, 55, 0.2);
  border-top-color: #D4AF37;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ========== A. 顶部：心灵花园 (35%) ========== */
.hero-garden {
  height: 35vh;
  min-height: 500rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  padding: 60rpx 40rpx 40rpx;
}

/* 水彩树背景 */
.tree-background {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1;
}

/* 水彩风格的树（CSS绘制） */
.watercolor-tree {
  position: relative;
  width: 400rpx;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 树干 */
.tree-trunk {
  width: 60rpx;
  height: 200rpx;
  background: linear-gradient(180deg, 
    rgba(139, 126, 116, 0.4) 0%,
    rgba(93, 83, 74, 0.5) 50%,
    rgba(139, 126, 116, 0.4) 100%
  );
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  z-index: 2;
  box-shadow: 
    inset -10rpx 0 20rpx rgba(0, 0, 0, 0.1),
    0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

/* 树冠 */
.tree-crown {
  position: absolute;
  bottom: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 350rpx;
  height: 280rpx;
  z-index: 1;
}

/* 树叶（水彩风格） */
.leaf {
  position: absolute;
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  background: radial-gradient(ellipse at 30% 30%, 
    rgba(181, 200, 170, 0.6) 0%,
    rgba(139, 160, 130, 0.5) 40%,
    rgba(93, 120, 90, 0.4) 100%
  );
  filter: blur(2rpx);
  box-shadow: 
    0 0 20rpx rgba(181, 200, 170, 0.3),
    inset 0 0 30rpx rgba(255, 255, 255, 0.2);
}

.leaf-1 {
  width: 120rpx;
  height: 100rpx;
  top: 20rpx;
  left: 50rpx;
  transform: rotate(-15deg);
}

.leaf-2 {
  width: 100rpx;
  height: 90rpx;
  top: 40rpx;
  right: 40rpx;
  transform: rotate(20deg);
}

.leaf-3 {
  width: 110rpx;
  height: 95rpx;
  top: 80rpx;
  left: 30rpx;
  transform: rotate(10deg);
}

.leaf-4 {
  width: 95rpx;
  height: 85rpx;
  top: 100rpx;
  right: 50rpx;
  transform: rotate(-25deg);
}

.leaf-5 {
  width: 105rpx;
  height: 90rpx;
  top: 140rpx;
  left: 60rpx;
  transform: rotate(15deg);
}

.leaf-6 {
  width: 90rpx;
  height: 80rpx;
  top: 160rpx;
  right: 30rpx;
  transform: rotate(-10deg);
}

/* 悬浮文字数据 */
.hero-text-overlay {
  position: relative;
  z-index: 6; /* 确保文字在宝物之上 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: -100rpx;
  pointer-events: none; /* 不阻挡点击 */
}

.hero-main-text {
  font-size: 32rpx;
  color: rgba(43, 48, 58, 0.7);
  letter-spacing: 6rpx;
  margin-bottom: 16rpx;
  font-weight: 400;
}

.hero-number {
  font-size: 96rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 20rpx rgba(212, 175, 55, 0.2);
  letter-spacing: 2rpx;
}

.hero-unit {
  font-size: 28rpx;
  color: rgba(43, 48, 58, 0.5);
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.hero-sub-text {
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.7);
  letter-spacing: 2rpx;
  font-weight: 300;
}

/* ========== B. 中部：岁月相册 (45%) ========== */
.calendar-card-section {
  flex: 1;
  padding: 0 40rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  min-height: 45vh;
}

/* 悬浮白色卡片 */
.calendar-card {
  width: 100%;
  max-width: 680rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.08),
    0 8rpx 24rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

/* 卡片背景纹理（纸张质感） */
.calendar-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2rpx,
      rgba(0, 0, 0, 0.01) 2rpx,
      rgba(0, 0, 0, 0.01) 4rpx
    ),
    radial-gradient(
      circle at 20% 30%,
      rgba(245, 243, 240, 0.3) 0%,
      transparent 50%
    );
  pointer-events: none;
  z-index: 0;
}

.card-header {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.nav-btn {
  font-size: 48rpx;
  color: rgba(43, 48, 58, 0.4);
  font-weight: 300;
  line-height: 1;
  transition: all 0.2s ease;
  padding: 0 16rpx;
}

.nav-btn:active {
  color: #D4AF37;
  transform: scale(1.2);
}

.month-title {
  font-size: 28rpx;
  color: #2B303A;
  letter-spacing: 2rpx;
  font-weight: 500;
}

.calendar-content {
  position: relative;
  z-index: 1;
}

/* 星期标题 */
.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.weekday {
  text-align: center;
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.6);
  font-weight: 400;
}

/* 日历网格 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 16rpx;
  background: rgba(245, 243, 240, 0.3);
  transition: all 0.2s ease;
}

.calendar-day.empty {
  background: transparent;
}

.calendar-day.today {
  border: 2rpx solid rgba(212, 175, 55, 0.4);
  background: rgba(212, 175, 55, 0.08);
}

.calendar-day.checked {
  background: rgba(181, 200, 170, 0.15);
  border: 1rpx solid rgba(181, 200, 170, 0.3);
}

.day-number {
  font-size: 22rpx;
  color: rgba(43, 48, 58, 0.6);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.calendar-day.today .day-number {
  color: #D4AF37;
  font-weight: 600;
}

.calendar-day.checked .day-number {
  color: rgba(43, 48, 58, 0.8);
}

/* 花朵图标 */
.flower-icon {
  font-size: 28rpx;
  line-height: 1;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: flowerBloom 0.5s ease-out;
}

@keyframes flowerBloom {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

/* ========== 悬浮宝物层 - 树的精灵 ========== */
.floating-treasures {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  pointer-events: none;
}

/* 宝物物品 */
.treasure-item {
  position: absolute;
  pointer-events: auto;
  z-index: 4;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.treasure-item:active {
  transform: scale(1.2);
  z-index: 10;
}

/* 天空物品 - 轻盈，上下浮动 */
.sky-item.floating {
  animation: floatSky 3s ease-in-out infinite;
}

@keyframes floatSky {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

/* 大地物品 - 静态，但有点击反馈 */
.ground-item {
  animation: none;
}

.ground-item:active {
  animation: groundBounce 0.3s ease;
}

@keyframes groundBounce {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-8rpx) scale(1.1);
  }
}

/* 宝物图标 - 高质感，带投影 */
.treasure-icon {
  font-size: 48rpx;
  line-height: 1;
  display: block;
  filter: 
    drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2))
    drop-shadow(0 0 20rpx rgba(212, 175, 55, 0.4))
    drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
}

.sky-item .treasure-icon {
  animation: treasureGlow 4s ease-in-out infinite;
}

@keyframes treasureGlow {
  0%, 100% {
    filter: 
      drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2))
      drop-shadow(0 0 20rpx rgba(212, 175, 55, 0.4))
      drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.15));
  }
  50% {
    filter: 
      drop-shadow(0 6rpx 16rpx rgba(0, 0, 0, 0.25))
      drop-shadow(0 0 28rpx rgba(212, 175, 55, 0.6))
      drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.15));
  }
}

.treasure-item:active .treasure-icon {
  filter: 
    drop-shadow(0 8rpx 20rpx rgba(0, 0, 0, 0.3))
    drop-shadow(0 0 36rpx rgba(212, 175, 55, 0.8))
    drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2));
  transform: scale(1.15);
}

/* 树洞入口 */
.tree-hole {
  position: absolute;
  right: 15%;
  bottom: 20%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  z-index: 5;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.tree-hole:active {
  opacity: 1;
  transform: scale(1.1);
}

.tree-hole-icon {
  font-size: 40rpx;
  line-height: 1;
  filter: 
    drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.15))
    drop-shadow(0 0 12rpx rgba(212, 175, 55, 0.3));
  animation: holeGlow 3s ease-in-out infinite;
}

@keyframes holeGlow {
  0%, 100% {
    filter: 
      drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.15))
      drop-shadow(0 0 12rpx rgba(212, 175, 55, 0.3));
    opacity: 0.6;
  }
  50% {
    filter: 
      drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2))
      drop-shadow(0 0 20rpx rgba(212, 175, 55, 0.5));
    opacity: 0.8;
  }
}

/* 字体样式 */
.font-serif {
  font-family: 'Songti SC', 'Times New Roman', serif;
}
