/* pages/lesson/lesson.wxss - 微课详情页 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  padding: 24rpx;
  padding-bottom: 200rpx;
}

/* ========== 返回按钮 ========== */
.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 48rpx;
  width: fit-content;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.back-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.6);
}

.back-icon {
  font-size: 32rpx;
  color: rgba(140, 134, 128, 0.8);
}

.back-text {
  font-size: 24rpx;
  color: rgba(140, 134, 128, 0.8);
  font-weight: 600;
}

/* ========== 微课卡片 ========== */
.lesson-card {
  background: linear-gradient(180deg, #FFFEF9 0%, #F9F6F0 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

/* 微课序号徽章 */
.lesson-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 20rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.badge-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #D4AF37;
  letter-spacing: 1rpx;
}

/* 标题 */
.lesson-title {
  margin-bottom: 32rpx;
  padding-right: 100rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1.5;
  font-family: "Songti SC", serif;
}

/* 核心内容 */
.lesson-content {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
}

.content-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.5;
  color: #5D4037;
  font-family: "KaiTi", "STKaiti", serif;
  text-align: justify;
  white-space: pre-line;
}

/* 实践动作 */
.lesson-action {
  padding: 24rpx;
  background: rgba(212, 175, 55, 0.08);
  border-radius: 16rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.2);
}

.action-label {
  font-size: 20rpx;
  font-weight: 700;
  color: #D4AF37;
  letter-spacing: 2rpx;
  font-family: "Songti SC", serif;
  margin-bottom: 12rpx;
}

.action-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #8B7E74;
  font-family: "KaiTi", "STKaiti", serif;
}

/* ========== 朗读按钮区 ========== */
.reading-section {
  padding: 40rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recording-status {
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 26rpx;
  color: #D4AF37;
  font-weight: 600;
}

.record-btn-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.record-btn-main {
  position: relative;
  z-index: 2;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B7E74 0%, #6B5E54 100%);
  box-shadow: 0 8rpx 24rpx rgba(139, 126, 116, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.record-btn-main:active {
  transform: scale(0.95);
}

.record-btn-main.recording {
  background: linear-gradient(135deg, #D4AF37 0%, #B8941F 100%);
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.record-btn-icon {
  font-size: 64rpx;
}

.record-btn-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.energy-halo {
  position: absolute;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, rgba(212, 175, 55, 0) 70%);
  transition: all 0.1s ease;
  pointer-events: none;
}

.playback-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: #FFFFFF;
  border: 2rpx solid rgba(140, 134, 128, 0.15);
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.playback-section:active {
  transform: scale(0.98);
}

.playback-icon {
  font-size: 32rpx;
}

.playback-text {
  font-size: 26rpx;
  color: rgba(140, 134, 128, 0.8);
  font-weight: 600;
}

/* ========== 底部按钮区 ========== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(245, 243, 240, 0.95) 20%);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
}

.bottom-actions.single-btn {
  justify-content: center;
}

.bottom-actions.single-btn .bottom-btn {
  max-width: 400rpx;
}

.bottom-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 96rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.bottom-btn:active {
  transform: scale(0.98);
}

.mark-btn {
  background: rgba(212, 175, 55, 0.1);
  color: #D4AF37;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.next-btn {
  background: linear-gradient(135deg, #8B7E74 0%, #6B5E54 100%);
  color: #FFFFFF;
}

.bottom-icon {
  font-size: 32rpx;
}

.bottom-text {
  font-size: 26rpx;
}
