.container {
  min-height: 100vh;
  background: #FDFCFB;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.logo-orb {
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.4) 0%, rgba(212, 175, 55, 0.1) 70%, transparent 100%);
  border-radius: 50%;
  box-shadow: 0 0 40rpx rgba(212, 175, 55, 0.2);
  margin-right: 30rpx;
}

.title-section {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2B303A;
  font-family: "Songti SC", serif;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #8B7E74;
  margin-top: 8rpx;
  letter-spacing: 2rpx;
}

.privilege-section {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B303A;
  margin-bottom: 40rpx;
  font-family: "Songti SC", serif;
}

.privilege-list {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.privilege-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.item-icon {
  font-size: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(212, 175, 55, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #2B303A;
}

.item-desc {
  font-size: 24rpx;
  color: #8B7E74;
}

.purchase-section {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.price-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 4rpx solid #F0F0F0;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.price-card.selected {
  border-color: #D4AF37;
  background: rgba(212, 175, 55, 0.02);
}

.card-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B303A;
}

.plan-desc {
  font-size: 24rpx;
  color: #8B7E74;
}

.card-right {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.currency {
  font-size: 24rpx;
  color: #D4AF37;
  font-weight: 600;
}

.price {
  font-size: 56rpx;
  font-weight: 700;
  color: #D4AF37;
}

.original {
  font-size: 24rpx;
  color: #C0C0C0;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #8B7E74;
  opacity: 0.6;
  margin-bottom: 40rpx;
}

.pay-btn {
  width: 100%;
  height: 100rpx;
  background: #2B303A;
  color: #FFFFFF;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.cancel-text {
  font-size: 26rpx;
  color: #8B7E74;
  padding: 20rpx;
}

.footer {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-link {
  font-size: 22rpx;
  color: #C0C0C0;
}

.divider {
  font-size: 20rpx;
  color: #E0E0E0;
}
