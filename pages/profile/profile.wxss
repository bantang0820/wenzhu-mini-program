/* pages/profile/profile.wxss - 本心页面 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  padding: 40rpx 24rpx 140rpx;
}

/* ========== 会员卡 ========== */
.member-card {
  position: relative;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.4) 100%);
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(212, 175, 55, 0.3);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.member-card.pro {
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(212, 175, 55, 0.05) 100%);
  border-color: rgba(212, 175, 55, 0.5);
}

.card-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -50rpx;
  left: -50rpx;
}

.card-user {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between; /* 撑开内容 */
  width: 100%;
}

.user-avatar-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  border: 2rpx solid rgba(212, 175, 55, 0.2);
  flex-shrink: 0;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 48rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B303A;
  font-family: "Songti SC", serif;
}

.user-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.level-tag {
  padding: 6rpx 16rpx;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 12rpx;
  font-size: 20rpx;
  color: rgba(212, 175, 55, 0.9);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.pro-badge-text {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.25) 0%, rgba(212, 175, 55, 0.15) 100%);
  border-radius: 12rpx;
  font-size: 18rpx;
  color: #D4AF37;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* ========== 会员有效期 ========== */
.validity-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.validity-text {
  font-family: "Songti SC", serif;
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.8);
  letter-spacing: 0.5rpx;
}

.validity-text.expiring {
  color: #D46A6A;
  font-weight: 600;
}

.renew-btn {
  padding: 4rpx 12rpx;
  background: rgba(212, 106, 106, 0.15);
  border-radius: 8rpx;
  border: 1rpx solid rgba(212, 106, 106, 0.3);
}

.renew-text {
  font-size: 18rpx;
  color: #D46A6A;
  font-weight: 600;
}

.member-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.8) 0%, rgba(212, 175, 55, 0.6) 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
  flex-shrink: 0;
}

.member-btn.pro {
  background: linear-gradient(135deg, #D4AF37 0%, #F0D060 100%);
}

.btn-text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* ========== 邀请有礼卡片 ========== */
.share-banner {
  margin-bottom: 24rpx;
  height: 160rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #FFF6E5 0%, #FFE8CC 100%);
  border: 1rpx solid rgba(255, 230, 200, 0.5);
  box-shadow: 0 10rpx 30rpx rgba(255, 180, 100, 0.15);

  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  transition: all 0.3s ease;
}

.share-banner:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 180, 100, 0.2);
}

.share-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.share-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #5D4037;
  line-height: 1.3;
  font-family: "Songti SC", serif;
}

.share-subtitle {
  font-size: 20rpx;
  color: #8D6E63;
  line-height: 1.5;
}

.share-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
}

.share-icon .icon-emoji {
  font-size: 56rpx;
}

/* ========== 功能列表 ========== */
.menu-section {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: background 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(93, 83, 74, 0.05);
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.icon-emoji {
  font-size: 32rpx;
}

.menu-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.menu-title {
  font-size: 26rpx;
  color: #2B303A;
  font-weight: 500;
}

.menu-desc {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.6);
}

.menu-arrow {
  margin-left: 16rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: rgba(140, 134, 128, 0.3);
  font-weight: 300;
}

/* ========== 底部版本信息 ========== */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.footer-text {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.4);
}

/* ========== 设置弹窗样式 ========== */
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
  display: flex;
  align-items: flex-end; /* 底部弹出 */
}

.settings-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  width: 100%;
  background: #FDFCFB;
  border-radius: 40rpx 40rpx 0 0;
  padding: 48rpx 40rpx env(safe-area-inset-bottom);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}

.settings-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2B303A;
  font-family: "Songti SC", serif;
  letter-spacing: 2rpx;
}

.close-icon {
  font-size: 48rpx;
  color: rgba(0, 0, 0, 0.2);
  line-height: 1;
  padding: 10rpx;
}

.setting-row {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.setting-row.flex-between {
  justify-content: space-between;
}

.setting-row .label {
  font-size: 28rpx;
  color: #8B7E74;
  width: 120rpx;
  flex-shrink: 0;
}

.custom-slider {
  flex: 1;
  margin: 0;
}

.setting-row .value {
  font-size: 24rpx;
  color: #D4AF37;
  width: 60rpx;
  text-align: right;
}

.time-picker-val {
  font-size: 28rpx;
  color: #2B303A;
  font-weight: 500;
}

.reminder-desc {
  font-size: 24rpx;
  color: rgba(140, 134, 128, 0.6);
  line-height: 1.6;
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(93, 83, 74, 0.03);
  border-radius: 16rpx;
}

/* 意见反馈样式 */
.feedback-input {
  width: 100%;
  height: 240rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2B303A;
  margin-bottom: 24rpx;
}

.contact-input {
  width: 100%;
  height: 88rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2B303A;
  margin-bottom: 24rpx;
}

.placeholder {
  color: rgba(140, 134, 128, 0.4);
}

/* ========== 关于稳住样式 ========== */
.about-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.about-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.about-logo .logo-orb {
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.4) 0%, rgba(212, 175, 55, 0.1) 70%, transparent 100%);
  border-radius: 50%;
  box-shadow: 0 0 30rpx rgba(212, 175, 55, 0.2);
  margin-bottom: 20rpx;
}

.logo-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #2B303A;
  font-family: "Songti SC", serif;
  letter-spacing: 4rpx;
}

.version-tag {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.5);
  margin-top: 8rpx;
}

.about-content {
  width: 100%;
}

.philosophy-item {
  margin-bottom: 40rpx;
}

.p-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #8B7E74;
  margin-bottom: 16rpx;
  display: block;
}

.p-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.concept-tag {
  font-size: 22rpx;
  color: #D4AF37;
  background: rgba(212, 175, 55, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.about-links {
  margin-top: 40rpx;
  display: flex;
  gap: 40rpx;
}

.link-item {
  font-size: 24rpx;
  color: #8B7E74;
  text-decoration: underline;
  opacity: 0.8;
}

.modal-footer {
  margin-top: 60rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: #2B303A;
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
