/* pages/index/index.wxss - 天人地布局 */

/* 容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* ========== 天：顶层世界观 Slogan ========== */
.top-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 80rpx 40rpx 20rpx;
  text-align: center;
  z-index: 100;
  background: linear-gradient(180deg, rgba(245, 243, 240, 1) 0%, rgba(245, 243, 240, 0.95) 100%);
}

.header-text {
  font-family: "Songti SC", "Times New Roman", serif;
  color: rgba(43, 48, 58, 0.6);
  font-size: 26rpx;
  letter-spacing: 4rpx;
  font-weight: 500;
}

/* ========== 人：呼吸之核 ========== */
.top-zone {
  height: 45vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 180rpx 24rpx 0;
  position: relative;
}

/* ========== 呼吸核心按钮 ========== */

.breathing-core-container {
  position: relative;
  width: 380rpx;
  height: 380rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.breathing-core {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;

  /* 1. 尺寸保持现在的 */
  /* 2. 核心质感：磨砂玻璃 + 渐变 */
  background: radial-gradient(120% 120% at 30% 30%, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.6) 100%);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);

  /* 3. 灵魂光效：外发光(暖金) + 内发光(高光) */
  box-shadow:
    0 20rpx 60rpx rgba(235, 189, 78, 0.25),
    inset 0 0 30rpx rgba(255, 255, 255, 0.8),
    inset -10rpx -10rpx 20rpx rgba(235, 189, 78, 0.1);

  /* 4. 呼吸动画保持8秒 */
  animation: breathe 8s ease-in-out infinite;
}

/* 内部光晕 */
.core-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60%;
  height: 60%;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 70%);
  animation: innerGlow 8s ease-in-out infinite;
}

/* 外部光晕 */
.core-outer {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.08) 0%, transparent 60%);
  animation: outerGlow 8s ease-in-out infinite;
}

/* 呼吸动画 */
.breathing-core.breathing {
  animation: breathe 8s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: scale(1);
    box-shadow:
      0 20rpx 60rpx rgba(235, 189, 78, 0.25),
      inset 0 0 30rpx rgba(255, 255, 255, 0.8),
      inset -10rpx -10rpx 20rpx rgba(235, 189, 78, 0.1);
  }
  50% {
    transform: scale(1.05);
    box-shadow:
      0 30rpx 80rpx rgba(235, 189, 78, 0.35),
      inset 0 0 40rpx rgba(255, 255, 255, 0.9),
      inset -12rpx -12rpx 25rpx rgba(235, 189, 78, 0.15);
  }
}

/* 按压效果 */
.breathing-core.pressed {
  transform: scale(0.95);
  box-shadow:
    0 10rpx 30rpx rgba(235, 189, 78, 0.3),
    inset 0 0 20rpx rgba(255, 255, 255, 0.7),
    inset -5rpx -5rpx 15rpx rgba(235, 189, 78, 0.15);
}

/* 内部光晕动画 */
@keyframes innerGlow {
  0%, 100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(0.9);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* 外部光晕动画 */
@keyframes outerGlow {
  0%, 100% {
    opacity: 0.3;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1.2);
  }
}

/* 核心文字 */
.core-text {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.core-main {
  font-size: 72rpx;
  font-weight: 700;
  color: #2B303A;
  letter-spacing: 0.1em;
  line-height: 1.2;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(212, 175, 55, 0.3);
}

.core-sub {
  font-size: 18rpx;
  font-weight: 400;
  color: #8B7E74;
  letter-spacing: 0.08em;
  line-height: 1.6;
  opacity: 0.65;
}

/* 涟漪效果 */
.ripple-effect {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.ripple-wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
  animation: rippleSpread 2s ease-out infinite;
}

.ripple-wave:nth-child(2) {
  animation-delay: 0.6s;
}

.ripple-wave:nth-child(3) {
  animation-delay: 1.2s;
}

@keyframes rippleSpread {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  100% {
    transform: translate(-50%, -50%) scale(2.5);
    opacity: 0;
  }
}

/* ========== 地：场景引导 + 矩阵 ========== */
.bottom-zone {
  height: 54vh;
  padding: 0 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: -60rpx;
}

.scenarios-container {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 引导文案 */
.section-guide {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  font-family: "Songti SC", serif;
  color: rgba(43, 48, 58, 0.5);
  letter-spacing: 2rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.guide-line {
  font-size: 20rpx;
  font-weight: 300;
  color: rgba(43, 48, 58, 0.2);
  letter-spacing: 0.1em;
}

.guide-text {
  color: rgba(140, 134, 128, 0.8);
}

/* ========== 第一层：Top 6 高频急救区 ========== */
.hero-section {
  flex-shrink: 0;
}

.hero-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.hero-card {
  height: 160rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: none;
  transition: all 0.2s ease;
  cursor: pointer;
}

.hero-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.75);
}

.hero-icon {
  font-size: 36rpx;
  line-height: 1;
  color: rgba(93, 83, 74, 0.8);
  -webkit-text-stroke: 0.5rpx rgba(93, 83, 74, 0.8);
  text-shadow: 0 1rpx 1rpx rgba(93, 83, 74, 0.1);
}

.hero-title {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(43, 48, 58, 0.8);
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.02em;
  font-family: "Songti SC", "Times New Roman", serif;
}

/* ========== 第二层：Rest 低频检索区 ========== */
.tags-section {
  flex: 1;
}

.tag-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10rpx;
}

.text-tag {
  min-height: 68rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(5px);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.text-tag:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.75);
}

.tag-title {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(43, 48, 58, 0.65);
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.02em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: "Songti SC", "Times New Roman", serif;
}
