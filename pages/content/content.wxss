/* pages/content/content.wxss - Insight Page */

.page-container {
  min-height: 100vh;
  padding: 40rpx 24rpx 140rpx;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
}

.header-box {
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2B303A;
  margin-bottom: 8rpx;
}

.subtitle-text {
  display: block;
  font-size: 22rpx;
  color: rgba(140, 134, 128, 0.6);
}

/* Grid Layout */
.album-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.album-card {
  min-height: 320rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 背景水印 */
.card-watermark {
  position: absolute;
  bottom: -30rpx;
  right: -30rpx;
  font-size: 160rpx;
  opacity: 0.15;
  z-index: 0;
}

.album-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
  z-index: 1;
}

.album-tag {
  display: inline-block;
  padding: 6rpx 14rpx;
  background: rgba(255, 255, 255, 0.22);
  border-radius: 8rpx;
  font-size: 18rpx;
  color: #FFFFFF;
  width: fit-content;
}

.album-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.3;
}

.album-subtitle {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: -4rpx;
}

.album-desc {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.4;
  margin-top: 4rpx;
}

/* 底部信息 */
.album-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  margin-top: 16rpx;
}

.progress-circle {
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 30rpx;
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.progress-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
}

.progress-percent {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.album-icon-small {
  font-size: 48rpx;
  opacity: 0.4;
}

/* Quote Card */
.quote-card {
  background: #FFFFFF;
  padding: 28rpx;
  border-left: 6rpx solid #D4AF37;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.quote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.quote-label {
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(43, 48, 58, 0.5);
}

.quote-icon {
  font-size: 28rpx;
}

.quote-content {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: #5D4037;
}
