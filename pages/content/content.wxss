/* pages/content/content.wxss - 阅见页面（恢复 4.0 极简版）*/

/* ========== 全局背景：宣纸质感 ========== */
.page-container {
  min-height: 100vh;
  padding: 40rpx 32rpx 220rpx;
  background: #FDFCFB; 
  position: relative;
}

/* 纸张纹理叠加层 */
.page-container::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml,%3Csvg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg"%3E%3Cfilter id="noiseFilter"%3E%3CfeTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch"/%3E%3C/filter%3E%3Crect width="100%25" height="100%25" filter="url(%23noiseFilter)"/%3E%3C/svg%3E');
  opacity: 0.02;
  pointer-events: none;
  z-index: 1;
}

/* ========== 顶部：每日心流便签 ========== */
.daily-inspiration {
  position: relative;
  margin-bottom: 60rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  padding: 50rpx 40rpx 40rpx;
  box-shadow: 
    0 20rpx 40rpx rgba(0, 0, 0, 0.02),
    0 4rpx 10rpx rgba(0, 0, 0, 0.01);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  transition: all 0.4s ease;
}

.pin-decoration {
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 20rpx;
  background: #D4AF37; 
  border-radius: 50%;
  box-shadow: 0 4rpx 8rpx rgba(212, 175, 55, 0.2);
}

.inspiration-date {
  font-size: 18rpx;
  color: #A09688;
  margin-bottom: 20rpx;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  font-family: "DIN Alternate", sans-serif;
  text-align: center;
}

.inspiration-text {
  display: block;
  font-size: 30rpx;
  line-height: 1.8;
  color: #2B303A;
  font-weight: 500;
  font-family: "Songti SC", serif;
  font-style: italic;
  text-align: center;
}

.tape-decoration {
  width: 60rpx;
  height: 16rpx;
  background: rgba(212, 175, 55, 0.08);
  margin: 24rpx auto 0;
  border-radius: 2rpx;
}

/* ========== 中部：学习路径（2列网格）========== */
.books-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.book-cover {
  position: relative;
  aspect-ratio: 3/3.8; 
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 15rpx 30rpx rgba(0, 0, 0, 0.04),
    0 2rpx 6rpx rgba(0, 0, 0, 0.01);
  transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  display: flex;
  flex-direction: column;
  padding: 32rpx 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.book-cover:active {
  transform: scale(0.98);
}

.book-info {
  position: relative;
  z-index: 5;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.book-tag {
  align-self: flex-start;
  padding: 2rpx 12rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 100rpx;
  font-size: 14rpx;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  letter-spacing: 0.05em;
  backdrop-filter: blur(10rpx);
}

.book-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.3;
  font-family: "Songti SC", serif;
  margin-bottom: 4rpx;
}

.book-subtitle {
  font-size: 16rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 0.2em;
  margin-bottom: 16rpx;
  text-transform: uppercase;
}

.book-desc {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.book-action {
  font-size: 16rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: auto;
  font-weight: 500;
}

/* 进度圆环/标签 */
.progress-label {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.progress-text {
  font-size: 14rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-family: "DIN Alternate", sans-serif;
}

/* 四种配色方案（莫兰迪色） */
.book-green { background: linear-gradient(135deg, #A2B59F 0%, #8E9E8B 100%); }
.book-blue { background: linear-gradient(135deg, #B0C1D1 0%, #9DAABF 100%); }
.book-pink { background: linear-gradient(135deg, #D9BDBD 0%, #C6A4A4 100%); }
.book-purple { background: linear-gradient(135deg, #BDB2C9 0%, #A99DB5 100%); }

/* 锁定状态 */
.book-lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.05);
  pointer-events: none;
  z-index: 10;
}

.lock-icon {
  font-size: 28rpx;
  opacity: 0.4;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  color: #FFFFFF;
}

/* ========== 底部：正念书签（玻璃拟态） ========== */
.reading-capsule {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  width: 80%;
}

.capsule-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(30rpx);
  -webkit-backdrop-filter: blur(30rpx);
  border-radius: 100rpx;
  box-shadow: 
    0 15rpx 40rpx rgba(0, 0, 0, 0.06),
    0 0 0 1rpx rgba(255, 255, 255, 0.5) inset;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.capsule-icon {
  font-size: 28rpx;
  color: #D4AF37;
}

.capsule-text {
  font-size: 16rpx;
  color: #A09688;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.capsule-lesson {
  flex: 1;
  font-size: 22rpx;
  color: #2B303A;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: "Songti SC", serif;
}
