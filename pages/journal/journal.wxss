.tree-container {
  text-align: center;
  margin-bottom: 32rpx;
}

.tree-emoji {
  display: block;
  font-size: 160rpx;
  margin-bottom: 24rpx;
  animation: treeGrow 0.8s ease-out;
}

@keyframes treeGrow {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.tree-level-bar {
  width: 80%;
  height: 16rpx;
  background: rgba(140, 140, 136, 0.2);
  border-radius: 8rpx;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.level-fill {
  height: 100%;
  background: linear-gradient(90deg, #D4AF37 0%, #C49B2A 100%);
  border-radius: 8rpx;
  transition: width 1s ease-out;
}

.tree-text {
