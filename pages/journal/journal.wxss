.flip-card-container {
  perspective: 1000rpx;
}

.flip-card {
  position: relative;
  width: 100%;
  height: 400rpx;
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.flip-card.flipped {
  transform: rotateY(180deg);
}

.flip-front,
.flip-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  border-radius: 16rpx;
  box-shadow: var(--shadow-convex);
}

.flip-front {
  background: linear-gradient(135deg, #EBEAE6 0%, #E5E4E0 100%);
}

.flip-back {
  background: linear-gradient(135deg, var(--color-accent) 0%, #C49B2A 100%);
  transform: rotateY(180deg);
}

.flip-emoji {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.flip-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
}

.flip-hint {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 16rpx;
}

.flip-analysis {
  font-size: 28rpx;
  line-height: 1.8;
