/* pages/scenarios/scenarios.wxss - 深海矩阵 */

/* 容器 - 深海黑背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1A1F26 0%, #0F1217 100%);
  display: flex;
  flex-direction: column;
  padding: 0 40rpx 40rpx;
}

/* 顶部引导 */
.header {
  padding: 120rpx 0 60rpx;
  text-align: center;
}

.header-text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(232, 208, 169, 0.6); /* 极淡的金色 */
  letter-spacing: 0.1em;
  line-height: 1.6;
}

/* 场景矩阵 - 3列网格 */
.scenarios-scroll {
  flex: 1;
  height: 100vh;
}

.scenarios-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3列等宽 */
  gap: 20rpx 24rpx; /* 行间距20rpx，列间距24rpx */
  padding-bottom: 80rpx;
}

/* 标签样式 - 深海冰块感 */
.tag-item {
  min-height: 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.05); /* 极淡背景 */
  border: 1rpx solid rgba(255, 255, 255, 0.08); /* 极细微光边 */
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

/* 标签按下效果 */
.tag-item:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.08);
}

/* 日常修习 - 特殊高亮 */
.tag-item.daily {
  background: rgba(232, 208, 169, 0.12); /* 淡金背景 */
  border-color: rgba(232, 208, 169, 0.25);
}

.tag-item.daily::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(232, 208, 169, 0.1) 0%, transparent 100%);
  pointer-events: none;
}

/* 标签图标 */
.tag-icon {
  font-size: 32rpx;
  line-height: 1;
  opacity: 0.6;
  margin-bottom: 4rpx;
}

/* 标签文字 */
.tag-label {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(235, 234, 230, 0.9); /* 米白色 */
  letter-spacing: 0.02em;
  line-height: 1.3;
  text-align: center;
}

/* 日常修习文字颜色 */
.tag-item.daily .tag-label {
  color: rgba(232, 208, 169, 0.95); /* 金色 */
  font-weight: 600;
}
