  letter-spacing: 0.15em;
  text-transform: uppercase;
}

.card-quote {
  text-align: center;
  margin-bottom: 40rpx;
}

.card-quote-text {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.8;
  letter-spacing: 0.05em;
  color: var(--color-text-primary);
