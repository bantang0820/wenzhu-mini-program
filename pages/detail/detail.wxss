/* pages/detail/detail.wxss - 原研哉式极简主义完整版 */

/* 容器 */
.container {
  min-height: 100vh;
  background-color: var(--color-bg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx 80rpx;
  position: relative;
  transition: background-color 0.8s ease;
  overflow: hidden;
}

/* 能量提示（顶部，不遮挡文字） */
.energy-toast {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%) translateY(-20rpx);
  background: rgba(212, 175, 55, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4);
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 999;
}

.energy-toast.show {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

.energy-toast-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 0.05em;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 朗读阶段：深海蓝背景 */
.container.reading-mode {
  background: linear-gradient(180deg, #1A1F26 0%, #0F1217 100%);
}

/* 深色模式 */
.container.dark-mode {
  background-color: var(--color-text-primary);
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 60rpx;
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.back-icon {
  font-size: 48rpx;
  color: var(--color-text-primary);
  font-weight: 300;
}

.dark-mode .back-icon {
  color: var(--color-bg);
}

/* 场景标题 */
.scenario-header {
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 10;
}

.scenario-tag {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.15em;
  text-transform: uppercase;
}

.dark-mode .scenario-tag {
  color: rgba(235, 234, 230, 0.6);
}

/* ========== 第一阶段：长按止颤 ========== */
.quote-container {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  padding: 80rpx 40rpx;
  margin-bottom: 60rpx;
  position: relative;
}

/* 基础文字（占位，不可见） */
.quote-text-base {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.6;
  letter-spacing: 0.05em;
  color: transparent;
  visibility: hidden;
  position: relative;
}

/* 黑色文字（绝对定位覆盖） */
.quote-text-black {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.6;
  letter-spacing: 0.05em;
  color: #2B303A;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  opacity: 1;
  transition: opacity 0.5s ease;
}

/* 金色文字（绝对定位覆盖） */
.quote-text-gold {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.6;
  letter-spacing: 0.05em;
  color: #D4AF37;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  opacity: 0;
  transition: opacity 0.5s ease;
}

/* 稳定化过程中：黑色淡出，金色淡入 */
.stabilizing .quote-text-black {
  animation: fadeOutBlack 2s ease-out forwards;
}

.stabilizing .quote-text-gold {
  animation: fadeInGold 2s ease-out forwards;
}

/* 稳定后：保持金色 */
.stabilized .quote-text-black {
  opacity: 0;
}

.stabilized .quote-text-gold {
  opacity: 1;
  animation: softGlow 2s ease-in-out infinite;
}

@keyframes fadeOutBlack {
  0% { opacity: 1; }
  50% { opacity: 1; }
  100% { opacity: 0; }
}

@keyframes fadeInGold {
  0% { opacity: 0; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}

/* 进度提示 */
.progress-hint {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-bottom: 32rpx;
  letter-spacing: 0.1em;
  text-align: center;
}

.dark-mode .progress-hint {
  color: rgba(235, 234, 230, 0.7);
}

/* 长按按钮包裹层 */
.hold-button-wrapper {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 50;
}

/* 长按按钮 - 琥珀圆形 */
.hold-button {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.hold-button.holding {
  transform: scale(1.05);
}

/* 已稳住按钮 - 可点击状态 */
.hold-button.stabilized-btn {
  animation: pulse 1.5s ease-in-out infinite;
  cursor: pointer;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow:
      8rpx 8rpx 16rpx rgba(212, 175, 55, 0.3),
      -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.8);
  }
  50% {
    transform: scale(1.08);
    box-shadow:
      12rpx 12rpx 24rpx rgba(212, 175, 55, 0.4),
      -12rpx -12rpx 24rpx rgba(255, 255, 255, 0.9);
  }
}

.hold-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-bg);
  letter-spacing: 0.1em;
  margin-bottom: 8rpx;
}

.hold-sub {
  font-size: 24rpx;
  color: rgba(235, 234, 230, 0.8);
  font-weight: 600;
}

/* 进度百分比 */
.hold-progress {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--color-bg);
  letter-spacing: 0.05em;
}

/* ========== 第二阶段：三轮朗读 ========== */
.phase-reveal {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 1.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.phase-reveal.show {
  opacity: 1;
  transform: translateY(0);
}

/* 轮次进度环 */
.round-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  animation: fadeIn 1s ease 0.3s both;
}

.progress-ring {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--color-accent);
  transition: opacity 0.3s ease;
  box-shadow: 0 0 12rpx rgba(212, 175, 55, 0.6);
}

.round-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.1em;
  font-weight: 500;
}

/* 引导语（录音按钮下方） */
.guide-text-container {
  text-align: center;
  margin-top: 32rpx;
  animation: fadeIn 1s ease 0.5s both;
}

.guide-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.15em;
  font-weight: 400;
}

.quote-reveal-container {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  padding: 80rpx 40rpx;
  margin-bottom: 60rpx;
}

.quote-reveal-text {
  font-size: 52rpx;
  font-weight: 700;
  line-height: 1.8;
  letter-spacing: 0.05em;
  color: var(--color-text-primary);
  white-space: pre-line;
}

.dark-mode .quote-reveal-text {
  color: var(--color-bg);
}

/* 打字机效果 - 文字逐个显现 */
.typewriter {
  overflow: hidden;
  border-right: 2rpx solid var(--color-text-primary);
  animation: blinkCursor 0.8s step-end infinite;
}

.dark-mode .typewriter {
  border-right-color: var(--color-bg);
}

/* 高光扫过效果（暗示阅读顺序） */
.shimmer {
  position: relative;
  overflow: hidden;
}

.shimmer::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(212, 175, 55, 0.15),
    transparent
  );
  animation: shimmer 3s ease-in-out infinite;
  animation-delay: 2s;
  pointer-events: none;
}

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 200%;
  }
}

@keyframes blinkCursor {
  0%, 100% { border-color: transparent; }
  50% { border-color: currentColor; }
}

/* 印章区域（延迟显示） */
.stamp-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 录音按钮 */
.record-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: transparent; /* 透明背景 */
  border: 3rpx solid rgba(255, 255, 255, 0.3); /* 半透明白边 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1); /* 微光 */
}

.record-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
}

.record-button.recording {
  border-color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.05);
  box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.3);
  animation: recordingPulse 1.5s ease-in-out infinite;
}

@keyframes recordingPulse {
  0%, 100% {
    box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1), 0 0 0 0 rgba(255, 255, 255, 0.4);
  }
  50% {
    box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.3), 0 0 0 15rpx rgba(255, 255, 255, 0);
  }
}

.record-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.record-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9); /* 高亮米白色 */
  font-weight: 600;
  letter-spacing: 0.05em;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5); /* 文字自带微光 */
}

/* 回放按钮组 */
.playback-buttons {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.play-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: transparent; /* 透明背景 */
  border: 2rpx solid rgba(255, 255, 255, 0.3); /* 半透明白边 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.1);
}

.play-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
}

.play-button.playing {
  border-color: rgba(255, 255, 255, 0.6);
  background: rgba(255, 255, 255, 0.05);
  box-shadow: 0 0 25rpx rgba(255, 255, 255, 0.3);
  animation: playingPulse 2s ease-in-out infinite;
}

@keyframes playingPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.1);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 25rpx rgba(255, 255, 255, 0.3);
  }
}

.play-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
  line-height: 1;
}

.play-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9); /* 高亮米白色 */
  font-weight: 600;
  letter-spacing: 0.05em;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5); /* 文字自带微光 */
}

.confirm-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: transparent; /* 透明背景 */
  border: 3rpx solid rgba(255, 255, 255, 0.4); /* 半透明白边 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.15);
}

.confirm-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.6);
}

.confirm-icon {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.95); /* 高亮米白色 */
  font-weight: 900;
  margin-bottom: 4rpx;
  line-height: 1;
  text-shadow: 0 0 15rpx rgba(255, 255, 255, 0.6); /* 图标自带微光 */
}

.confirm-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9); /* 高亮米白色 */
  font-weight: 600;
  letter-spacing: 0.05em;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5); /* 文字自带微光 */
}

/* ========== 治愈分享卡片 ========== */
.healing-card-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(235, 234, 230, 0.95);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.5s ease;
  z-index: 200;
}

.healing-card-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.healing-content {
  width: 85%;
  max-width: 600rpx;
  background: var(--color-surface);
  border-radius: 32rpx;
  padding: 80rpx 60rpx;
  box-shadow: var(--shadow-elevated);
  text-align: center;
  transform: scale(0.8);
  transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.healing-card-modal.show .healing-content {
  transform: scale(1);
}

.healing-icon {
  font-size: 80rpx;
  margin-bottom: 40rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
  50% {
    transform: scale(1.1) rotate(10deg);
    opacity: 0.8;
  }
}

.healing-quote {
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  position: relative;
}

.healing-quote::before,
.healing-quote::after {
  content: '"';
  position: absolute;
  font-size: 80rpx;
  color: var(--color-accent);
  opacity: 0.3;
  font-family: 'Times New Roman', serif;
}

.healing-quote::before {
  top: 0;
  left: 0;
}

.healing-quote::after {
  bottom: -20rpx;
  right: 0;
}

.healing-text {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.8;
  letter-spacing: 0.05em;
  color: var(--color-text-primary);
}

.healing-hint {
  margin-bottom: 60rpx;
}

.healing-hint text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.1em;
  font-weight: 500;
}

.healing-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.healing-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx 40rpx;
  border-radius: 48rpx;
  transition: all 0.2s ease;
}

.healing-share {
  background: linear-gradient(135deg, #D4AF37 0%, #C49B2A 100%);
  box-shadow:
    8rpx 8rpx 16rpx rgba(212, 175, 55, 0.3),
    -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.8);
}

.healing-share:active {
  transform: scale(0.98);
  box-shadow:
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.2);
}

.healing-home {
  background: var(--color-bg);
  box-shadow: var(--shadow-convex);
}

.healing-home:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-concave);
}

.healing-btn-icon {
  font-size: 32rpx;
}

.healing-btn-label {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.05em;
}

.healing-share .healing-btn-label {
  color: #FFFFFF;
}

.healing-home .healing-btn-label {
  color: var(--color-text-primary);
}

/* ========== 第四阶段：涟漪（完成卡片） ========== */
.phase-completed {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.phase-completed.show {
  opacity: 1;
  transform: scale(1);
}

/* 完成卡片 - 像拍立得照片 */
.completed-card {
  width: 600rpx;
  background: var(--color-surface);
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: var(--shadow-elevated);
  position: relative;
  overflow: hidden;
  margin-bottom: 60rpx;
}

/* 卡片纹理 */
.completed-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(0,0,0,0.02) 100%);
  pointer-events: none;
}

.card-tag {
  text-align: center;
  margin-bottom: 40rpx;
}

.card-tag text {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.15em;
  text-transform: uppercase;
}

.card-quote {
  text-align: center;
  margin-bottom: 40rpx;
}

.card-quote-text {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.8;
  letter-spacing: 0.05em;
  color: var(--color-text-primary);
  white-space: pre-line;
}

/* 日期印章 */
.date-stamp {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #C43C3C;
  border-radius: 8rpx;
  transform: rotate(-5deg);
  opacity: 0.8;
}

.date-text {
  font-size: 18rpx;
  color: #C43C3C;
  font-family: 'Times New Roman', 'Songti SC', serif;
  font-weight: 600;
  letter-spacing: 0.05em;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 40rpx;
  margin-top: 20rpx;
}

.action-btn {
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  transition: all 0.2s ease;
}

.action-icon {
  font-size: 32rpx;
}

.action-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  letter-spacing: 0.05em;
}

.action-btn:active {
  transform: scale(0.95);
}

/* ========== 涟漪效果 ========== */
.ripple-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 1;
}

.ripple {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, transparent 70%);
  animation: ripple 1.5s ease-out;
}

/* ========== 动画 ========== */

/* 颤抖动画 */
.shake-animation .quote-text-black {
  animation: shake 0.08s infinite;
}

.dark-mode .shake-animation .quote-text-black {
  filter: blur(1rpx);
}

/* 稳定化动画 - 震动逐渐减弱 */
.shake-animation.stabilizing .quote-text-black {
  animation: stabilizeShake 2s ease-out forwards !important;
  filter: blur(0) !important;
}

@keyframes shake {
  0%, 100% {
    transform: translate(0, 0);
  }
  25% {
    transform: translate(-2rpx, 2rpx);
  }
  50% {
    transform: translate(2rpx, -2rpx);
  }
  75% {
    transform: translate(-2rpx, -2rpx);
  }
}

@keyframes stabilizeShake {
  /* 震动逐渐减弱，50%时完全停止，与变色同步 */
  0% { transform: translate(0, 0); }
  10% { transform: translate(-2rpx, 2rpx); }
  20% { transform: translate(2rpx, -2rpx); }
  30% { transform: translate(-2rpx, 2rpx); }
  40% { transform: translate(2rpx, -2rpx); }
  50% { transform: translate(0, 0); }
  60% { transform: translate(0, 0); }
  70% { transform: translate(0, 0); }
  80% { transform: translate(0, 0); }
  90% { transform: translate(0, 0); }
  100% { transform: translate(0, 0); }
}

/* 稳定后的光芒效果 */
@keyframes softGlow {
  0%, 100% {
    text-shadow: 0 0 20rpx rgba(212, 175, 55, 0.3);
  }
  50% {
    text-shadow: 0 0 40rpx rgba(212, 175, 55, 0.6);
  }
}

/* 涟漪扩散 */
@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(4);
    opacity: 0;
  }
}

/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* ========== 萤火虫粒子效果 ========== */

/* 萤火虫容器 */
.fireflies-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
  opacity: 0;
  transition: opacity 1.5s ease;
}

.reading-mode .fireflies-container {
  opacity: 1;
}

/* 单个萤火虫 */
.firefly {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.8) 0%, rgba(212, 175, 55, 0) 70%);
  box-shadow: 0 0 12rpx 6rpx rgba(212, 175, 55, 0.4);
  animation: fireflyFloat 8s ease-in-out infinite;
}

/* 萤火虫浮动动画 */
@keyframes fireflyFloat {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.3;
  }
  25% {
    transform: translate(30rpx, -50rpx) scale(1.5);
    opacity: 1;
  }
  50% {
    transform: translate(-20rpx, -80rpx) scale(1);
    opacity: 0.6;
  }
  75% {
    transform: translate(40rpx, -30rpx) scale(1.3);
    opacity: 0.9;
  }
}

/* 萤火虫闪烁延迟（每个萤火虫不同） */
.firefly:nth-child(1) { animation-delay: 0s; }
.firefly:nth-child(2) { animation-delay: 1.5s; }
.firefly:nth-child(3) { animation-delay: 3s; }
.firefly:nth-child(4) { animation-delay: 4.5s; }
.firefly:nth-child(5) { animation-delay: 6s; }
.firefly:nth-child(6) { animation-delay: 2s; }
.firefly:nth-child(7) { animation-delay: 3.5s; }
.firefly:nth-child(8) { animation-delay: 5s; }
.firefly:nth-child(9) { animation-delay: 0.5s; }
.firefly:nth-child(10) { animation-delay: 2.5s; }
.firefly:nth-child(11) { animation-delay: 4s; }
.firefly:nth-child(12) { animation-delay: 5.5s; }
.firefly:nth-child(13) { animation-delay: 1s; }
.firefly:nth-child(14) { animation-delay: 3s; }
.firefly:nth-child(15) { animation-delay: 4.5s; }

