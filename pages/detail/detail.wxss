/* ========== 治愈分享卡片 ========== */
.healing-card-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(235, 234, 230, 0.95);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.5s ease;
  z-index: 200;
}

.healing-card-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.healing-content {
  width: 85%;
  max-width: 600rpx;
  background: var(--color-surface);
  border-radius: 32rpx;
  padding: 80rpx 60rpx;
  box-shadow: var(--shadow-elevated);
  text-align: center;
  transform: scale(0.8);
  transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.healing-card-modal.show .healing-content {
  transform: scale(1);
}

.healing-icon {
  font-size: 80rpx;
  margin-bottom: 40rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
  50% {
    transform: scale(1.1) rotate(10deg);
    opacity: 0.8;
  }
}

.healing-quote {
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  position: relative;
}

.healing-quote::before,
.healing-quote::after {
  content: '"';
  position: absolute;
  font-size: 80rpx;
  color: var(--color-accent);
  opacity: 0.3;
  font-family: 'Times New Roman', serif;
}

.healing-quote::before {
  top: 0;
  left: 0;
}

.healing-quote::after {
  bottom: -20rpx;
  right: 0;
}

.healing-text {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.8;
  letter-spacing: 0.05em;
  color: var(--color-text-primary);
}

.healing-hint {
  margin-bottom: 60rpx;
}

.healing-hint text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.1em;
  font-weight: 500;
}

.healing-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.healing-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx 40rpx;
  border-radius: 48rpx;
  transition: all 0.2s ease;
}

.healing-share {
  background: linear-gradient(135deg, #D4AF37 0%, #C49B2A 100%);
  box-shadow:
    8rpx 8rpx 16rpx rgba(212, 175, 55, 0.3),
    -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.8);
}

.healing-share:active {
  transform: scale(0.98);
  box-shadow:
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.2);
}

.healing-home {
  background: var(--color-bg);
  box-shadow: var(--shadow-convex);
}

.healing-home:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-concave);
}

.healing-btn-icon {
  font-size: 32rpx;
}

.healing-btn-label {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.05em;
}

.healing-share .healing-btn-label {
  color: #FFFFFF;
}

.healing-home .healing-btn-label {
  color: var(--color-text-primary);
}

/* ========== 第四阶段：涟漪（完成卡片） ========== */
.phase-completed {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.phase-completed.show {
