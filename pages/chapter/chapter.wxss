/* pages/chapter/chapter.wxss - 章节详情页（微课模式）*/

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3F0 0%, #EBE9E5 100%);
  padding-bottom: 160rpx;
}

/* ========== 章节头部 ========== */
.chapter-header {
  padding: 40rpx 32rpx 32rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.chapter-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.chapter-number {
  font-size: 22rpx;
  font-weight: 600;
  color: #D4AF37;
  letter-spacing: 1rpx;
  font-family: "Songti SC", serif;
}

.chapter-divider {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.3);
}

.chapter-progress {
  font-size: 22rpx;
  font-weight: 600;
  color: rgba(140, 134, 128, 0.7);
  font-family: "DIN Alternate", "Songti SC", serif;
}

.chapter-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1.4;
  margin-bottom: 12rpx;
  font-family: "Songti SC", serif;
  letter-spacing: 2rpx;
}

.chapter-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(140, 134, 128, 0.7);
  line-height: 1.5;
  font-family: "Songti SC", serif;
}

/* ========== 微课列表 ========== */
.lessons-section {
  padding: 24rpx;
}

/* 微课卡片 */
.lesson-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.lesson-card:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 完成状态标记 */
.lesson-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: rgba(140, 134, 128, 0.2);
  transition: background 0.3s ease;
}

.lesson-card.completed::before {
  background: linear-gradient(180deg, #D4AF37 0%, #F0D060 100%);
}

/* 微课序号 */
.lesson-number {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(140, 134, 128, 0.08);
  border-radius: 16rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.lesson-number.completed {
  background: rgba(212, 175, 55, 0.15);
}

.lesson-number .number-text {
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(140, 134, 128, 0.5);
  font-family: "DIN Alternate", sans-serif;
}

.lesson-number.completed .number-text {
  color: #D4AF37;
}

/* 微课内容区 */
.lesson-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 破：金句标题 */
.lesson-breakthrough {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.breakthrough-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.breakthrough-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1.4;
  font-family: "Songti SC", serif;
}

/* 立：解读 */
.lesson-insight {
  display: block;
  font-size: 24rpx;
  line-height: 1.4;
  color: #5D4037;
  font-family: "KaiTi", "STKaiti", serif;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  white-space: pre-line;
}

/* 行：行动建议 */
.lesson-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(212, 175, 55, 0.08);
  border-radius: 12rpx;
  border-left: 3rpx solid rgba(212, 175, 55, 0.3);
}

.action-icon {
  font-size: 20rpx;
  flex-shrink: 0;
}

.action-text {
  flex: 1;
  font-size: 22rpx;
  line-height: 1.6;
  color: #D4AF37;
  font-family: "KaiTi", "STKaiti", serif;
  font-weight: 600;
}

/* 完成状态 */
.lesson-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.status-text {
  font-size: 20rpx;
  color: rgba(140, 134, 128, 0.6);
}

.status-icon {
  font-size: 24rpx;
  color: rgba(140, 134, 128, 0.3);
}

.lesson-card.completed .status-icon {
  color: #D4AF37;
}

/* ========== 底部完成按钮 ========== */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(245, 243, 240, 0.95) 20%);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.complete-chapter-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #D4AF37 0%, #F0D060 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  transition: all 0.3s ease;
}

.complete-chapter-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(212, 175, 55, 0.4);
}

.btn-main-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.btn-sub-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ========== 自定义微课详情弹窗 ========== */
.lesson-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 660rpx;
  max-height: 80vh;
  background: linear-gradient(180deg, #FFFEF9 0%, #F9F6F0 100%);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  position: relative;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 关闭按钮 */
.modal-close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(140, 134, 128, 0.1);
  border-radius: 50%;
  z-index: 10;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: rgba(140, 134, 128, 0.2);
  transform: scale(0.95);
}

.close-icon {
  font-size: 48rpx;
  color: rgba(140, 134, 128, 0.6);
  line-height: 1;
  font-weight: 300;
}

/* 弹窗滚动区域 */
.modal-scroll {
  flex: 1;
  padding: 80rpx 40rpx 40rpx;
  max-height: calc(80vh - 160rpx);
}

/* 弹窗段落 */
.modal-section {
  margin-bottom: 32rpx;
  position: relative;
}

.section-label {
  display: inline-block;
  font-size: 22rpx;
  font-weight: 700;
  color: #D4AF37;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
  font-family: "Songti SC", serif;
}

/* 破：金句 */
.breakthrough-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2B303A;
  line-height: 1.5;
  font-family: "Songti SC", serif;
}

/* 立：解读 */
.insight-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.5;
  color: #5D4037;
  font-family: "KaiTi", "STKaiti", serif;
  text-align: justify;
  white-space: pre-line;
}

/* 行：行动 */
.action-text-full {
  display: block;
  font-size: 24rpx;
  line-height: 1.8;
  color: #D4AF37;
  font-family: "KaiTi", "STKaiti", serif;
  padding: 16rpx 20rpx;
  background: rgba(212, 175, 55, 0.08);
  border-radius: 12rpx;
  border-left: 4rpx solid rgba(212, 175, 55, 0.3);
}

/* 底部操作按钮 */
.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 40rpx 32rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  background: #FFFFFF;
  border-radius: 0 0 32rpx 32rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.practice-btn-full {
  background: linear-gradient(135deg, #8B7E74 0%, #6B5E54 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(139, 126, 116, 0.3);
}

.practice-btn-full:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(139, 126, 116, 0.4);
}

.complete-btn-full {
  background: rgba(212, 175, 55, 0.1);
  color: #D4AF37;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.complete-btn-full:active {
  transform: scale(0.98);
  background: rgba(212, 175, 55, 0.15);
}

.complete-btn-full.completed {
  background: rgba(212, 175, 55, 0.2);
  color: #FFFFFF;
}

.action-btn .btn-icon {
  font-size: 32rpx;
}

.action-btn .btn-label {
  font-size: 26rpx;
  font-weight: 600;
}
