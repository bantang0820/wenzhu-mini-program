/* pages/login/login.wxss - 登录页面样式 */
page {
  background: var(--color-bg);
}

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 48rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 120rpx;
}

.logo-text {
  display: block;
  font-size: 96rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  letter-spacing: 0.2em;
  margin-bottom: 16rpx;
}

.logo-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  letter-spacing: 0.1em;
}

/* 授权区域 */
.auth-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-info {
  text-align: center;
  margin-bottom: 48rpx;
}

.info-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
}

.info-desc {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
}

/* 授权按钮 */
.auth-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--color-accent) 0%, #C49B2A 100%);
  border-radius: 48rpx;
  box-shadow:
    8rpx 8rpx 16rpx rgba(212, 175, 55, 0.3),
    -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.8);
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.auth-btn:active {
  transform: scale(0.98);
  box-shadow:
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.3);
}

.auth-btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 0.1em;
}

/* 隐私说明 */
.privacy-note {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  text-align: center;
  line-height: 1.6;
}

.privacy-link {
  color: var(--color-accent);
}
