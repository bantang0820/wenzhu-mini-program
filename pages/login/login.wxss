/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: #FDFCFB;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  box-sizing: border-box;
}

.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo-orb {
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.4) 0%, rgba(212, 175, 55, 0.1) 70%, transparent 100%);
  border-radius: 50%;
  margin-bottom: 40rpx;
  box-shadow: 0 0 40rpx rgba(212, 175, 55, 0.2);
  animation: pulse 4s infinite ease-in-out;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.2); opacity: 0.9; }
}

.logo-title {
  font-size: 64rpx;
  font-weight: 600;
  color: #2B303A;
  letter-spacing: 12rpx;
  font-family: "Songti SC", serif;
  margin-bottom: 16rpx;
}

.logo-subtitle {
  font-size: 24rpx;
  color: #A09688;
  letter-spacing: 2rpx;
}

/* 授权区域 */
.auth-section {
  width: 100%;
  text-align: center;
}

.welcome-text {
  margin-bottom: 80rpx;
}

.greeting {
  display: block;
  font-size: 36rpx;
  color: #2B303A;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.sub-greeting {
  display: block;
  font-size: 26rpx;
  color: #A09688;
}

/* 按钮样式 */
.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
}

.login-btn.primary {
  background: #2B303A;
  color: #FFFFFF;
  box-shadow: 0 10rpx 30rpx rgba(43, 48, 58, 0.2);
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.privacy-note {
  font-size: 22rpx;
  color: #A09688;
}

.privacy-note .link {
  color: #D4AF37;
  display: inline;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
  pointer-events: none;
}

.mist {
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(245, 243, 239, 0.8), transparent);
}
