<!--pages/login/login.wxml - 登录页面-->
<view class="login-container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <text class="logo-text title-serif">稳住</text>
    <text class="logo-subtitle">正念育儿，从稳住开始</text>
  </view>

  <!-- 授权按钮 -->
  <view class="auth-section">
    <view class="auth-info">
      <text class="info-title">欢迎使用稳住</text>
      <text class="info-desc">请授权微信登录，开启你的正念育儿之旅</text>
    </view>

    <button
      class="auth-btn"
      bindtap="onGetUserInfo"
      open-type="getUserInfo"
      get-user-info="onGetUserInfo"
    >
      <text class="auth-btn-text">微信授权登录</text>
    </button>

    <view class="privacy-note">
      <text>登录即表示同意</text>
      <text class="privacy-link">《用户协议》</text>
      <text>和</text>
      <text class="privacy-link">《隐私政策》</text>
    </view>
  </view>
</view>
