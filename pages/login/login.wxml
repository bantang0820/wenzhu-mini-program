<!--pages/login/login.wxml - 登录/注册-->
<view class="container">
  <view class="login-content">
    <view class="logo-section">
      <view class="logo-orb"></view>
      <text class="logo-title">稳住</text>
      <text class="logo-subtitle">做不焦虑的父母，给孩子更好的爱</text>
    </view>

    <view class="auth-section">
      <view class="welcome-text">
        <text class="greeting">你好，亲爱的家长</text>
        <text class="sub-greeting">邀请你开启这段正念育儿之旅</text>
      </view>

      <!-- 快速登录按钮 -->
      <button class="login-btn primary" bindtap="handleQuickLogin">
        一键开启
      </button>

      <view class="privacy-note">
        登录即表示同意 <text class="link">《服务协议》</text> 与 <text class="link">《隐私政策》</text>
      </view>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="mist"></view>
  </view>
</view>
